<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="wlm.watertreatme.activity.ForgetPassActivity">

    <include layout="@layout/head_toolbar"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:background="@drawable/input_bg">

        <EditText
            android:id="@+id/et_user_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColorHint="@color/grey1"
            android:hint="请输入账号"
            android:layout_marginRight="10dp"
            android:paddingLeft="10dp"
            android:background="@null"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:background="@drawable/input_bg">

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColorHint="@color/grey1"
            android:hint="请输入手机号"
            android:layout_marginRight="10dp"
            android:paddingLeft="10dp"
            android:background="@null"
            android:maxLength="11"
            android:inputType="phone"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >

        <EditText
            android:id="@+id/et_mesg"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="25dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/input_bg"
            android:hint="输入短信验证码"
            android:cursorVisible="true"
            android:textCursorDrawable="@null"
            android:textSize="16sp"
            android:paddingLeft="10dp"
            android:textColorHint="@color/grey1"/>


        <TextView
            android:id="@+id/tv_get_mesg"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="10dp"
            android:text="发送验证码"
            android:textSize="16sp"
            android:background="@drawable/shape_tv_bg"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#ffffff"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:background="@drawable/input_bg">

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColorHint="@color/grey1"
            android:hint="请输入新密码,6-13位英文字母或数字"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:paddingLeft="10dp"
            android:inputType="textPassword"
            android:textSize="16sp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:background="@drawable/input_bg">


        <EditText
            android:id="@+id/et_new_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColorHint="@color/grey1"
            android:hint="请确认密码"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:paddingLeft="10dp"
            android:inputType="textPassword"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:visibility="gone"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_user_agreement"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <CheckBox
                android:id="@+id/checkbox_agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:button="@null"
                android:checked="true"
                android:background="@drawable/button_create_bg1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="我已阅读并同意"
                android:gravity="center"
                android:textColor="@color/grey1"
                android:textSize="16sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_user_agreement"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="《用户条款和隐私协议》"
            android:textColor="@color/failTextColor"
            android:textSize="16sp"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="50dp"
        android:text="确认修改"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:background="@drawable/btn_b_blue"/>



</LinearLayout>
